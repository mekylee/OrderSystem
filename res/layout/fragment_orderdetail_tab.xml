<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
      <TextView
       android:id="@+id/orderdetail_tv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:padding="10dp"
      
       android:text="订单详情" />
   
      <View 
          android:layout_width="wrap_content"
          android:layout_height="1px"
          android:background="@color/gray"
          android:layout_below="@id/orderdetail_tv"/>
    
   <RelativeLayout
       android:id="@+id/detail_layout1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/orderdetail_tv"
       android:padding="5dp" >

       <TextView
           android:id="@+id/dish_name_tv1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:padding="10dp"
           android:textSize="15dp" 
           android:text="红烧鱼" />

       <TextView
           android:id="@+id/price1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/number1"
           android:layout_alignParentRight="true"
           android:layout_marginRight="22dp"
           android:padding="10dp"
           android:text="￥30"
           android:textSize="15dp" />

       <TextView
           android:id="@+id/number1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/dish_name_tv1"
           android:layout_centerHorizontal="true"
           android:padding="10dp"
           android:text="X1"
           android:textSize="15dp" />
       
   </RelativeLayout>
   <RelativeLayout
       android:id="@+id/detail_layout2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/orderdetail_tv"
       android:layout_marginTop="57dp"
       android:padding="5dp" >

       <TextView
           android:id="@+id/dish_name_tv2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:padding="10dp"
           android:text="糖醋排骨"
           android:textSize="15dp" />

       <TextView
           android:id="@+id/price2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/number2"
           android:layout_alignParentRight="true"
           android:layout_marginRight="22dp"
           android:padding="10dp"
           android:text="￥30"
           android:textSize="15dp" />

       <TextView
           android:id="@+id/number2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/dish_name_tv2"
           android:layout_centerHorizontal="true"
           android:padding="10dp"
           android:text="X1"
           android:textSize="15dp" />
   </RelativeLayout>

   <View
       android:id="@+id/view3"
       android:layout_width="wrap_content"
       android:layout_height="1px"
         android:layout_below="@id/detail_layout2"
       android:background="@color/gray" />

    <RelativeLayout
        android:id="@+id/detail_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/detail_layout2"
        android:padding="10dp" >

        <TextView
            android:id="@+id/total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="总计：￥60"
            android:textSize="15dp" />
    </RelativeLayout>
  
</RelativeLayout>
